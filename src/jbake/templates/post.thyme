<!DOCTYPE html SYSTEM "http://www.thymeleaf.org/dtd/xhtml1-strict-thymeleaf-4.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org">
<head th:replace="header.thyme::head"/>
<body class="right-sidebar" onload="prettyPrint()">
	<div id="page-wrapper">
		<header th:insert="menu.thyme::menu" id="header"/>

		<!-- Main -->
		<article id="main">

			<header class="special container">
				<span class="icon solid fa-tablet-alt"></span>
				<h2 th:text='${content.title}'>title</h2>

				<ul class="list-inline">

					<li><span th:with="author=(${content.author != null} ? ${content.author} + ' on ' : '')" th:text='${author}'>Author:</span></li>
					<li th:each="tag : ${content.tags}">
						<a th:with="rootpath=(${config.tag_path != null} ? '/'+ ${config.tag_path}+'/'+${tag}+'.html' : '')"
							th:href="${rootpath}" href="#" th:utext='${tag}'></a>
					</li>
					<li> | </li>
					<li> 	<span><em th:text='${#dates.format(content.date,"dd MMMM yyyy")}'>date</em></span> </li>
				</ul>
			</header>

			<!-- One -->
			<section class="wrapper style4 container">

				<div class="row gtr-150">
					<div class="col-8 col-12">
						<!-- Content -->
						<div class="content">
							<p th:remove="tag" th:utext='${content.body}'>body</p>
						</div>
					</div>
				</div>
			</section>

			<footer>
	        <a th:if="${content.previousContent}" th:with="rootpath=(${content.rootpath != null} ? ${content.rootpath} : '')" th:href="${rootpath}+${content.previousContent.uri}" href="#" class="post-prev"><span>&larr;</span> <strong>Previous post</strong></a>

	        <a th:if="${content.nextContent}" th:with="rootpath=(${content.rootpath != null} ? ${content.rootpath} : '')" th:href="${rootpath}+${content.nextContent.uri}" href="#" class="post-next"><strong>Next post</strong> <span>&rarr;</span></a>
	    </footer>

		</article>

		<link th:with="rootpath=(${content.rootpath != null} ? ${content.rootpath} : '')"  th:href="${rootpath}+'css/blog.css'" rel="stylesheet"/>

		<div th:replace="footer.thyme::footer"></div>
	</body>
	</html>
