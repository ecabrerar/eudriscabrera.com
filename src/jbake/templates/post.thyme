<!DOCTYPE html SYSTEM "http://www.thymeleaf.org/dtd/xhtml1-strict-thymeleaf-4.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org">
<head th:replace="header.thyme::head"/>
<body class="right-sidebar">
	<div id="page-wrapper">
		<header th:insert="menu.thyme::menu" id="header"/>

		<!-- Main -->
		<article id="main">

			<header class="special container">
				<span class="icon solid fa-tablet-alt"></span>
				<h2 th:text='${content.title}'>title</h2>
				<p><em th:text='${#dates.format(content.date,"dd MMMM yyyy")}'>date</em></p>
				<ul th:each="tag : ${content.tags}">
					<li><p th:utext='${tag}'>body</p></li>
				</ul>
			</header>

			<!-- One -->
			<section class="wrapper style4 container">

				<div class="row gtr-150">
					<div class="col-8 col-12-narrower">

						<!-- Content -->
						<div class="content">
							<p th:utext='${content.body}'>body</p>
						</div>

					</div>
				</div>
			</section>

			<footer>
	        <a th:if="${content.previousContent}" th:with="rootpath=(${content.rootpath != null} ? ${content.rootpath} : '')" th:href="${rootpath}+${content.previousContent.uri}" href="#" class="post-prev">&larr; Previous post</a>

	        <a th:if="${content.nextContent}" th:with="rootpath=(${content.rootpath != null} ? ${content.rootpath} : '')" th:href="${rootpath}+${content.nextContent.uri}" href="#" class="post-next">Next post &rarr;</a>
	    </footer>

		</article>

		<div th:replace="footer.thyme::footer"></div>
	</body>
	</html>
